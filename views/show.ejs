<%layout('boilerplate')%>
<h1><%=foodpost.title%></h1>
<div>
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <% if (foodpost.images.length){%>
                    <img class="img-fluid rounded-start h-100" src="<%=foodpost.images[0] %>" style="object-fit: cover;">
                <% } else { %>
                    <img class="img-fluid rounded-start h-100" src="https://plus.unsplash.com/premium_photo-1673108852141-e8c3c22a4a22?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8Zm9vZHxlbnwwfHwwfHx8MA%3D%3D" style="object-fit: cover;">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=foodpost.title%></h5>
                    <p class="card-text"><%=foodpost.description%></p>
                    <p class="card-text">
                        <%=foodpost.location%>
                    </p>
                    <a class="btn btn-primary" href="/foodposts/">  View </a>
                </div>
            </div>
        </div>
    </div>
</div>
